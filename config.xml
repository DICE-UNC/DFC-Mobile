<?xml version="1.0.2" encoding="UTF-8" standalone="yes"?>
<preference name="android-manifest/@android:installLocation" value="auto" />
<widget id="io.cordova.iRODS" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0"  android-versionCode="16">
  <name>iRODS</name>
  <description>
        A mobile app to browse your iRODS data grid.
    </description>
  <author email="matt1123@live.unc.edu" href="http://www.irods.org">
        Matthew Krause -- DFC
    </author>
  <content src="index.html"/>
  <access origin="*"/>
  <icon src="img/icon.png"/>
  <platform name="android">
     <icon src="resources/android/icon/icon-ldpi.png" density="ldpi" />
    <icon src="resources/android/icon/icon-mdpi.png" density="mdpi" />
    <icon src="resources/android/icon/icon-hdpi.png" density="hdpi" />
    <icon src="resources/android/icon/icon-xhdpi.png" density="xhdpi" />
    <icon src="resources/android/icon/icon-xxhdpi.png" density="xxhdpi" />
    <icon src="resources/android/icon/icon-xxxhdpi.png" density="xxxhdpi" />
  </platform>
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashScreenDelay" value="3000"/>
  <plugin name="cordova-custom-config" source="npm" />
</widget>